import sys
import json
import agent

request = json.load(sys.stdin)

original_environment = request['environment']

for evar in [
        "TRAEFIK_HOST",
        "TRAEFIK_HTTP2HTTPS",
        "TRAEFIK_LETS_ENCRYPT",
        "LDAP_ADMIN_USERS",
        "LAM_LOGIN_METHOD",
        "LAM_PASSWORD",
        "LDAP_DOMAIN",
        "LDAP_LICENSE"
    ]:
    agent.set_env(evar, original_environment[evar])

agent.dump_env()
